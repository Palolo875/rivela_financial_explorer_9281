# Rivela Financial Explorer Environment Variables

# Application Configuration
VITE_APP_NAME=Rivela Financial Explorer
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Modern financial data visualization and analytics platform

# API Configuration (if applicable)
VITE_API_BASE_URL=https://api.rivela.com
VITE_API_TIMEOUT=10000

# Feature Flags
VITE_ENABLE_ANALYTICS=true
VITE_ENABLE_DEBUG_MODE=false
VITE_ENABLE_PERFORMANCE_MONITORING=true

# Security
VITE_ENABLE_SECURITY_HEADERS=true

# Development Settings
VITE_ENABLE_DEV_TOOLS=true
VITE_ENABLE_HOT_RELOAD=true

# External Services (if used)
VITE_SENTRY_DSN=your_sentry_dsn_here
VITE_GA_TRACKING_ID=your_google_analytics_id